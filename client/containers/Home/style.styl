buttonDisabledColor = #696969

.home
  position relative
  background #fff

.home-type
  position fixed
  width 27%
  height 100%
  left 0
  top 0
  background #fafafa
  padding-top 2.7rem
  padding-bottom 3rem
  border-bottom 1px solid #ebedf0
  box-shadow 2px 0 3px 1px #eee


.home-food
  width: 100%

input
  outline none
  border-radius 5px
  text-indent .5rem
  font-size .9rem
  box-shadow: inset 0 2px 2px #e9e9e9;
  border: 1px solid #aeaeae;

button
  outline none
  min-height 1.6rem
  border none

button:disabled
  background buttonDisabledColor
  color #fff
