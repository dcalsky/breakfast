.cart
  position fixed
  line-height 2.8rem
  height 2.8rem
  background #333
  width 100%
  bottom 0
  color #fff

.cart-count
  float left
  padding 0 1.5rem 0 1.1rem
  i
    font-size 2.2rem
  em
    position absolute
    top -9px
    left 45px
    width 24px
    height 24px
    font-size 1rem
    background: #fe2947
    border-radius 24px
    text-align center
    font-style normal
    line-height 24px

.cart-total
  float left
  padding-left 1rem

.cart-buy
  float right
  height 100%
  button
    padding 0 1.5rem
    background #fe2947
    font-size 1rem
    font-weight 400
    color #fff
    height 100%
    outline none
    border none